<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date Submitted</th>
      <th>Date of Ticket</th>
      <th>Location of Ticket</th>
    </tr>
  </thead>
  <tbody>
    <% tickets.each do |ticket| %>
      <tr class="plaintiff">
        <td class="name">
          <%= ticket[:fullname] %>
        </td>
        <td class="date-submitted">
          <%= ticket[:created_at].strftime("%Y/%m/%d") %>
        </td>
        <td class="date-ticketed">
          <%= ticket[:date].strftime("%Y/%m/%d") %>
        </td>
        <td>
          <% if ticket[:latitude] and ticket[:longitude] %>
            <a href="http://maps.google.com/maps?q=<%= ticket[:latitude] %>,<%= ticket[:longitude] %>" target="_blank">View on Google Maps</a>
          <% else %>
            None provided
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
